package sup1.model;

public class Score {
//필드
	int 국어;
	int 영어;
	int 수학;
	int 총점;
	double 평균;
//메서드
	//필수 생성자
	public Score(int 국어, int 영어, int 수학, int 총점, double 평균) {
		this.국어 = 국어;
		this.수학 = 수학;
		this.영어 = 영어;
		this.총점 = 총점;
		this.평균 = 평균;
	}
	
	//void 점수
	public void 점수() {
		총점 = 국어 + 영어 + 수학;
		평균 = 총점 / 3.0;
		//평균 50점 이상이면 합격
		//삼항연산자로 합격 불합격
		//각 점수가 50 이상 평균 50점 이상
		//출력문으로 국어 영어 수학점수
		//삼항연산자에 대한 결과 출력
		
		
	}
	
}
